{
  "expo": {
    "name": "Mobile PDF Editor",
    "slug": "mobile-pdf-editor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mobilepdfeditor",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "A mobile PDF editor for merging, splitting, and editing PDF documents",
    "privacy": "public",
    "platforms": ["ios", "android"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mobilepdfeditor.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSDocumentsFolderUsageDescription": "This app needs access to documents to manage PDF files",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to import PDF files",
        "UIFileSharingEnabled": true,
        "LSSupportsOpeningDocumentsInPlace": true,
        "UTImportedTypeDeclarations": [
          {
            "UTTypeIdentifier": "com.adobe.pdf",
            "UTTypeDescription": "PDF Document",
            "UTTypeConformsTo": ["public.data"],
            "UTTypeTagSpecification": {
              "public.filename-extension": ["pdf"],
              "public.mime-type": ["application/pdf"]
            }
          }
        ]
      }
    },
    "android": {
      "package": "com.mobilepdfeditor.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "MANAGE_DOCUMENTS"
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "category": ["android.intent.category.DEFAULT"],
          "data": {
            "mimeType": "application/pdf"
          }
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-document-picker",
      "expo-file-system",
      "expo-sharing",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
